{
  "name": "ccg",
  "version": "2.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "nodemon -r dotenv/config src/server/server.js",
    "prod": "pm2 start src/server/server.js --node-args=\"-r dotenv/config\"",
    "tailwind-watch": "npx tailwindcss -i ./src/client/styles/styles.css -o ./src/client/out/ccg/styles.css --watch",
    "scss-compile": "sass ./src/client/styles/:./src/client/out/compiled",
    "ng": "ng",
    "ng-build": "npm run ng-build-main && npm run ng-build-news",
    "ng-watch-dev": "npm run ng-watch-main-dev && npm run ng-watch-news-dev",
    "ng-watch-prod": "npm run ng-watch-main-prod && npm run ng-watch-news-prod",
    "ng-start-main": "ng serve main",
    "ng-build-main": "ng build main",
    "ng-watch-main-dev": "ng build main --watch --configuration development",
    "ng-watch-main-prod": "ng build main --watch --configuration production",
    "ng-test-main": "ng test main",
    "ng-start-news": "ng serve news",
    "ng-build-news": "ng build news",
    "ng-watch-news-dev": "ng build news --watch --configuration development",
    "ng-watch-news-prod": "ng build news --watch --configuration production",
    "ng-test-news": "ng test news"
  },
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.12",
    "@angular/forms": "^16.2.0",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/router": "^16.2.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "js-dos": "^7.5.0",
    "needle": "^3.3.1",
    "node-html-parser": "^6.1.12",
    "node-schedule": "^2.1.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.2",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.6",
    "@angular/cli": "^16.2.6",
    "@angular/compiler-cli": "^16.2.0",
    "node-sass": "^9.0.0",
    "nodemon": "^3.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.1.3"
  }
}
